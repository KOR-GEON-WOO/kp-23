<!DOCTYPE html>
<html>
<head>
  <head>
    <title>KP-23 Dashboard</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
    />
    <link rel="stylesheet" type="text/css" href="style.css" />
  </head>
  <body>
    <header>
      <div class="container">
        <h1>KP-23 Dashboard</h1>
      </div>
    </header>

    <section class="sensor-data">
      <div class="container">
        <div class="alert alert-primary">
          <h2 class="sensor-info">Sensor Data</h2>
          <hr />
          <div class="row">
            <div class="col-md-4">
              <strong>Temperature:</strong>
              <span class="sensor-value" id="temperature">Loading...</span
              >&deg;C
            </div>
            <div class="col-md-4">
              <strong>Humidity:</strong>
              <span class="sensor-value" id="humidity">Loading...</span>%
            </div>
            <div class="col-md-4">
              <strong>Soil Humidity:</strong>
              <span class="sensor-value" id="soilHumidity">Loading...</span>%
            </div>
          </div>
        </div>
      </div>
    </section>

    <section class="color-control">
      <div class="container">
        <div class="alert alert-info">
          <h2 class="sensor-info">LED Color</h2>
          <hr />
          <div class="slider-container">
            <div class="slider red-slider">
              <input
                type="range"
                min="0"
                max="255"
                value="127"
                class="red-slider-bar"
                id="redSlider"
                oninput="updateColor('red')"
              />
            </div>
            <div class="slider green-slider">
              <input
                type="range"
                min="0"
                max="255"
                value="127"
                class="green-slider-bar"
                id="greenSlider"
                oninput="updateColor('green')"
              />
            </div>
            <div class="slider blue-slider">
              <input
                type="range"
                min="0"
                max="255"
                value="127"
                class="blue-slider-bar"
                id="blueSlider"
                oninput="updateColor('blue')"
              />
            </div>
          </div>
        </div>
      </div>
    </section>

    <section class="control-buttons">
      <div class="container">
        <div class="alert alert-warning">
          <h2 class="sensor-info">Control Buttons</h2>
          <hr />
          <button class="btn btn-primary" id="waterPumpBtn">Water Pump</button>
          <button class="btn btn-success" id="fanBtn">Fan Control</button>
        </div>
      </div>
    </section>

    <script src="script.js"></script>
  </body>
</html>
